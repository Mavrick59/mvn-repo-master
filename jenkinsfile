pipeline{ 
    agent any
    stages {
        stage('GIt checkout'){
            steps{
                script{
                    git 'https://github.com/Mavrick59/project-0.3.git'
                }
            }
        }
        stage('UNIT testing'){
              
            steps{
                sh 'mvn test'
            }
        }
        stage("Integration Testing"){

            steps{
                sh 'mvn verify -DskipUnitTests'
            }
        }
        stage('MVN building'){

            steps{
                sh 'mvn clean package'
            }
        }
        stage('static code analysis'){

            steps{

                script{

                 withSonarQubeEnv('sonar') {
                       sh 'mvn sonar:sonar' 
                
                    }
                }               
            }
        }
    }   stage('NEXUS'){
	       steps{     	          nexusArtifactUploader(
        nexusVersion: 'nexus3',
        protocol: 'http',
        nexusUrl: '43.205.212.232:8081',
        groupId: 'com.exam',
        version: "${env.BUILD_ID}",
        repository: 'studentapp',
        credentialsId: 'nexus-auth1',
        artifacts: [
            [artifactId: 'studentapp' ,
             classifier: '',
             file: 'target/studentapp-2.5-SNAPSHOT.war' ,
             type: 'war']
        ]
     )
	    
    }         
}
    
